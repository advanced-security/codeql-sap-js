<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Input value="{foo}" />
    <Input value="{/foo}" />
    <Input value="{model>foo}" />
    <Input value="{model>/foo}" />
    <Input
        value="{foo}"
        binding="{/root}" />
    <Input value="{path: 'foo', type: 'sap.ui.model.type.String'}" />
    <Input value="{path: '/foo', type: 'sap.ui.model.type.String'}" />
    <Input value="{path: 'model>/foo', type: 'sap.ui.model.type.String'}" />
    <Input value="{path: 'model>foo', type: 'sap.ui.model.type.String'}" />

    <Input
        value="{
            parts:
            [
                {path: 'foo'},
                {path: 'bar/baz'},
                {path: 'quux'}
            ],
            formatter: 'some.formatter'}" />
</mvc:View>